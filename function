date=`date +%F--%H-%M`

fservername=$server
[ -z $prefix ] || fservername=$prefix-$server

fsname() {
    if [ $1 == "/" ]; then
        fs=root
    else
        fs=`echo $backup | sed "s,/,-,g; s,^-,,g; s,-$,,g"`
    fi
    echo $fs
}

ducount() {
	path=$1
	name=$2
	if [ ! -s $name ]; then 
		ducount=`du -s $path | awk '{ sum += $1 }; END { print sum }'`
		[ "$?" -ne "0" ] && exit 1
		echo $ducount > $name 
	fi
}



