date=`date +%F--%H-%M`

fservername=$server
[ -z $prefix ] || fservername=$prefix-$server

fsname() {
    if [ $1 == "/" ]; then
        fs=root
    else
        fs=`echo $backup | sed "s,/,-,g; s,^-,,g; s,-$,,g"`
    fi
    echo $fs
}

if [ $server == "local" ]; then
  backupsrv="" 
  type=ssh
else
  backupsrv="$user@$server:" 
fi

